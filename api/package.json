{
  "name": "api",
  "version": "1.0.0",
  "description": "My API built with Node.js and TypeScript",
  "main": "dist/app.js",
  "type": "module",
  "scripts": {
    "build": "rm -rf dist && tsc",
    "start": "node --env-file=.env.prod dist/app.js",
    "dev": "tsx watch --env-file=.env src/app.ts",
    "db:push": "tsx ./node_modules/drizzle-kit/bin.cjs push",
    "db:studio": "drizzle-kit studio",
    "prettier:fix": "prettier ./src --write",
    "lint": "eslint ./src",
    "test": "node --import tsx --test --env-file=.env ./src/**/*.test.ts",
    "test:watch": "node --import tsx --test --watch --env-file=.env ./src/**/*.test.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "engines": {
    "node": ">=22"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^22.4.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "drizzle-kit": "^0.22.8",
    "eslint": "~8.56.0",
    "eslint-config-prettier": "~9.1.0",
    "prettier": "^3.3.3",
    "tsx": "^4.16.2",
    "typescript": "^5.5.3"
  },
  "dependencies": {
    "@lucia-auth/adapter-drizzle": "^1.0.7",
    "@paralleldrive/cuid2": "^2.2.2",
    "arctic": "^1.9.1",
    "cors": "^2.8.5",
    "date-fns": "^3.6.0",
    "drizzle-orm": "^0.31.2",
    "drizzle-zod": "^0.5.1",
    "express": "^4.19.2",
    "lucia": "^3.2.0",
    "oslo": "^1.2.1",
    "pino": "^9.2.0",
    "pino-pretty": "^11.2.1",
    "postgres": "^3.4.4",
    "supertest": "^7.0.0",
    "zod": "^3.23.8"
  }
}
